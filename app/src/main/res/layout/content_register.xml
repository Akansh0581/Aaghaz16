<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akansh.aaghaz.Register"
    tools:showIn="@layout/activity_register">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="College Name..." />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/viewcollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="College name..."
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:visibility="gone"
            app:biu_duration="800"
            app:biu_text_color="@android:color/black"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup" />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Event Name..." />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="No. of Members..." />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/viewname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Name"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            app:biu_duration="800"
            app:biu_text_color="@android:color/black"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/viewpno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Contact no."
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@android:color/black"
            app:biu_duration="800"
            app:biu_text_color="@android:color/black"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/viewcourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Course"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            app:biu_duration="800"
            app:biu_text_color="@android:color/black"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup" />

        <me.james.biuedittext.BiuEditText
            android:id="@+id/viewemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            app:biu_duration="800"
            app:biu_text_color="@color/colorAccent"
            app:biu_text_scale="1.5"
            app:biu_text_start_size="18sp"
            app:biu_type="flyup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_note"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimary"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>