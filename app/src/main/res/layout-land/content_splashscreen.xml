<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pgdavhyperion.com.aaghaz.activities.Splashscreen"
    tools:showIn="@layout/activity_splashscreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_splash"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/splashpgdav"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_splashpgdav"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/aaghazsplash"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_aaghazsplash"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"/>
    </LinearLayout>
</RelativeLayout>
